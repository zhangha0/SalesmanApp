<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <ScrollView
        android:id="@+id/sv_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="35px"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    style="@style/black32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dishes_num" />

                <EditText
                    android:id="@+id/et_dishes_num"
                    style="@style/gray30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:background="@null"
                    android:hint="@string/dishes_num" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40px"
                android:orientation="horizontal">

                <TextView
                    style="@style/black32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dishes_price" />

                <EditText
                    android:id="@+id/et_dishes_price"
                    style="@style/gray30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:background="@null"
                    android:hint="@string/dishes_price" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40px"
                android:orientation="horizontal">

                <TextView
                    style="@style/black32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/discount_price" />

                <EditText
                    android:id="@+id/et_dishes_discountPrice"
                    style="@style/gray30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:background="@null"
                    android:hint="@string/discount_price" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40px"
                android:orientation="horizontal">

                <TextView
                    style="@style/black32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dishes_nameES" />

                <EditText
                    android:id="@+id/et_dishes_nameES"
                    style="@style/gray30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:background="@null"
                    android:hint="@string/dishes_name" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40px"
                android:orientation="horizontal">

                <TextView
                    style="@style/black32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dishes_nameEN" />

                <EditText
                    android:id="@+id/et_dishes_nameEN"
                    style="@style/gray30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:background="@null"
                    android:hint="@string/dishes_name" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40px"
                android:orientation="horizontal">

                <TextView
                    style="@style/black32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dishes_nameCN" />

                <EditText
                    android:id="@+id/et_dishes_nameCN"
                    style="@style/gray30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:background="@null"
                    android:hint="@string/dishes_name" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40px"
                android:orientation="vertical">

                <TextView
                    style="@style/black32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dishes_batching" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35px"
                    android:orientation="horizontal">

                    <com.wzj.work.salesmanapp.MyView.MyImage
                        android:id="@+id/iv_food1"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_margin="2px"
                        android:layout_weight="1"
                        android:background="@mipmap/food1" />

                    <com.wzj.work.salesmanapp.MyView.MyImage
                        android:id="@+id/iv_food2"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_margin="2px"
                        android:layout_weight="1"
                        android:background="@mipmap/food2" />

                    <com.wzj.work.salesmanapp.MyView.MyImage
                        android:id="@+id/iv_food3"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_margin="2px"
                        android:layout_weight="1"
                        android:background="@mipmap/food3" />

                    <com.wzj.work.salesmanapp.MyView.MyImage
                        android:id="@+id/iv_food4"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_margin="2px"
                        android:layout_weight="1"
                        android:background="@mipmap/food4" />

                    <com.wzj.work.salesmanapp.MyView.MyImage
                        android:id="@+id/iv_food5"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_margin="2px"
                        android:layout_weight="1"
                        android:background="@mipmap/food5" />

                    <com.wzj.work.salesmanapp.MyView.MyImage
                        android:id="@+id/iv_food6"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_margin="2px"
                        android:layout_weight="1"
                        android:background="@mipmap/food6" />

                    <com.wzj.work.salesmanapp.MyView.MyImage
                        android:id="@+id/iv_food7"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_margin="2px"
                        android:layout_weight="1"
                        android:background="@mipmap/food7" />

                    <com.wzj.work.salesmanapp.MyView.MyImage
                        android:id="@+id/iv_food8"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_margin="2px"
                        android:layout_weight="1"
                        android:background="@mipmap/food8" />

                    <com.wzj.work.salesmanapp.MyView.MyImage
                        android:id="@+id/iv_food9"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_margin="2px"
                        android:layout_weight="1"
                        android:background="@mipmap/food9" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40px"
                android:orientation="horizontal">

                <TextView
                    style="@style/black32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dishes_introduceES" />

                <EditText
                    android:id="@+id/et_dishes_introduceES"
                    style="@style/gray30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:background="@null"
                    android:hint="@string/word100" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40px"
                android:orientation="horizontal">

                <TextView
                    style="@style/black32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dishes_introduceEN" />

                <EditText
                    android:id="@+id/et_dishes_introduceEN"
                    style="@style/gray30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:background="@null"
                    android:hint="@string/word100" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40px"
                android:orientation="horizontal">

                <TextView
                    style="@style/black32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dishes_introduceCN" />

                <EditText
                    android:id="@+id/et_dishes_introduceCN"
                    style="@style/gray30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:background="@null"
                    android:hint="@string/word100" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40px"
                android:orientation="vertical">

                <TextView
                    style="@style/black32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dishes_picture" />

                <LinearLayout
                    android:layout_marginTop="30px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10px"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/iv_upFood0"
                            android:layout_width="135px"
                            android:layout_height="135px"
                            android:layout_margin="10px"
                            android:visibility="gone" />
                        <ImageView
                            android:id="@+id/iv_upFood1"
                            android:layout_width="135px"
                            android:layout_height="135px"
                            android:layout_margin="10px"
                            android:visibility="gone" />
                        <ImageView
                            android:id="@+id/iv_upFood2"
                            android:layout_width="135px"
                            android:layout_height="135px"
                            android:layout_margin="10px"
                            android:visibility="gone" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10px"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/iv_upFood3"
                            android:layout_width="135px"
                            android:layout_height="135px"
                            android:layout_margin="10px"
                            android:visibility="gone" />
                        <ImageView
                            android:id="@+id/iv_upFood4"
                            android:layout_width="135px"
                            android:layout_height="135px"
                            android:layout_margin="10px"
                            android:visibility="gone" />
                        <ImageView
                            android:id="@+id/iv_upFood5"
                            android:layout_width="135px"
                            android:layout_height="135px"
                            android:layout_margin="10px"
                            android:visibility="gone" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10px"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/iv_upFood6"
                            android:layout_width="135px"
                            android:layout_height="135px"
                            android:layout_margin="10px"
                            android:visibility="gone"/>
                        <ImageView
                            android:id="@+id/iv_upFood7"
                            android:layout_width="135px"
                            android:layout_height="135px"
                            android:layout_margin="10px"
                            android:visibility="gone" />
                        <ImageView
                            android:id="@+id/iv_upFood8"
                            android:layout_width="135px"
                            android:layout_height="135px"
                            android:layout_margin="10px"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
