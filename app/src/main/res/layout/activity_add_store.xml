<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_marginTop="35px"
            android:layout_marginRight="80px"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_ShopType"
                style="@style/white36"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00aaee"
                android:padding="5px"
                android:gravity="center" />

            <ImageView
                android:id="@+id/im_storeLogo"
                android:layout_width="200px"
                android:layout_height="200px"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/shape_yuan"
                android:src="@drawable/store_logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40px"
                android:orientation="horizontal">

                <TextView
                    style="@style/black32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ShopName_ES" />

                <EditText
                    android:id="@+id/et_ShopName_ES"
                    style="@style/gray30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:background="@null"
                    android:hint="@string/ShopName" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40px"
                android:orientation="horizontal">

                <TextView
                    style="@style/black32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ShopName_EN" />

                <EditText
                    android:id="@+id/et_ShopName_EN"
                    style="@style/gray30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:background="@null"
                    android:hint="@string/ShopName" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="40px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/black32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ShopName_CN" />

                <EditText
                    android:id="@+id/et_ShopName_CN"
                    style="@style/gray30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:background="@null"
                    android:hint="@string/ShopName" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="40px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/black32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Remark_ES" />

                <EditText
                    android:id="@+id/et_Remark_ES"
                    style="@style/gray30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:background="@null"
                    android:hint="@string/word100" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="40px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/black32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Remark_EN" />

                <EditText
                    android:id="@+id/et_Remark_EN"
                    style="@style/gray30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:background="@null"
                    android:hint="@string/word100" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="40px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/black32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Remark_CN" />

                <EditText
                    android:id="@+id/et_Remark_CN"
                    style="@style/gray30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:background="@null"
                    android:hint="@string/word100" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="40px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/black32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Shop_ZipCode" />

                <EditText
                    android:id="@+id/et_Shop_ZipCode"
                    style="@style/gray30"
                    android:layout_marginLeft="10px"
                    android:layout_width="match_parent"
                    android:layout_height="70px"
                    android:gravity="center_vertical"
                    android:background="@drawable/shape_kuang"
                    android:paddingLeft="20px"
                    android:hint="@string/Shop_ZipCode" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="40px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/black32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Shop_Email" />

                <EditText
                    android:id="@+id/et_Shop_Email"
                    style="@style/gray30"
                    android:layout_marginLeft="10px"
                    android:layout_width="match_parent"
                    android:layout_height="70px"
                    android:gravity="center_vertical"
                    android:background="@drawable/shape_kuang"
                    android:paddingLeft="20px"
                    android:hint="@string/Shop_Email" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="40px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/black32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Shop_Mobile" />

                <EditText
                    android:id="@+id/et_Shop_Mobile"
                    style="@style/gray30"
                    android:layout_marginLeft="10px"
                    android:layout_width="match_parent"
                    android:layout_height="70px"
                    android:gravity="center_vertical"
                    android:background="@drawable/shape_kuang"
                    android:paddingLeft="20px"
                    android:hint="@string/Shop_Mobile" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="40px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/black32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Address" />

                <TextView
                    android:id="@+id/tv_Address"
                    style="@style/gray30"
                    android:layout_marginLeft="10px"
                    android:layout_width="match_parent"
                    android:layout_height="70px"
                    android:gravity="center_vertical"
                    android:background="@drawable/shape_kuang"
                    android:paddingLeft="20px"
                    android:hint="@string/Address"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="40px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/black32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Address_2" />

                <EditText
                    android:id="@+id/et_Address_2"
                    style="@style/gray30"
                    android:layout_marginLeft="10px"
                    android:layout_width="match_parent"
                    android:layout_height="70px"
                    android:gravity="center_vertical"
                    android:background="@drawable/shape_kuang"
                    android:paddingLeft="20px"
                    android:hint="@string/Address_2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="40px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/black32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Shop_time" />

                <TextView
                    android:id="@+id/tv_Shop_time"
                    style="@style/gray30"
                    android:layout_marginLeft="10px"
                    android:layout_width="match_parent"
                    android:layout_height="70px"
                    android:gravity="center_vertical"
                    android:background="@drawable/shape_kuang"
                    android:paddingLeft="20px"
                    android:hint="@string/Shop_time"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="40px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/black32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Shop_time_am" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10px">
                    <TextView
                        android:id="@+id/tv_Shop_time_am1"
                        style="@style/gray30"
                        android:layout_width="225px"
                        android:layout_height="70px"
                        android:gravity="center_vertical"
                        android:background="@drawable/shape_kuang"
                        android:paddingLeft="20px"
                        android:hint="@string/start_time"
                        android:layout_alignParentLeft="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/gray30"
                        android:text=":"
                        android:gravity="center"
                        android:layout_centerInParent="true"/>
                    <TextView
                        android:id="@+id/tv_Shop_time_am2"
                        style="@style/gray30"
                        android:layout_width="225px"
                        android:layout_height="70px"
                        android:gravity="center_vertical"
                        android:background="@drawable/shape_kuang"
                        android:paddingLeft="20px"
                        android:hint="@string/end_time"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="40px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/black32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Shop_time_pm" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10px">
                    <TextView
                        android:id="@+id/tv_Shop_time_pm1"
                        style="@style/gray30"
                        android:layout_width="225px"
                        android:layout_height="70px"
                        android:gravity="center_vertical"
                        android:background="@drawable/shape_kuang"
                        android:paddingLeft="20px"
                        android:hint="@string/start_time"
                        android:layout_alignParentLeft="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/gray30"
                        android:text=":"
                        android:gravity="center"
                        android:layout_centerInParent="true"/>
                    <TextView
                        android:id="@+id/tv_Shop_time_pm2"
                        style="@style/gray30"
                        android:layout_width="225px"
                        android:layout_height="70px"
                        android:gravity="center_vertical"
                        android:background="@drawable/shape_kuang"
                        android:paddingLeft="20px"
                        android:hint="@string/end_time"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="40px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/black32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/StarTake_money" />

                <EditText
                    android:id="@+id/et_StarTake_money"
                    style="@style/gray30"
                    android:layout_marginLeft="10px"
                    android:layout_width="match_parent"
                    android:layout_height="70px"
                    android:gravity="center_vertical"
                    android:background="@drawable/shape_kuang"
                    android:paddingLeft="20px"
                    android:hint="@string/StarTake_money"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="40px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/black32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Freight" />

                <EditText
                    android:id="@+id/et_Freight"
                    style="@style/gray30"
                    android:layout_marginLeft="10px"
                    android:layout_width="match_parent"
                    android:layout_height="70px"
                    android:gravity="center_vertical"
                    android:background="@drawable/shape_kuang"
                    android:paddingLeft="20px"
                    android:hint="@string/Freight"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="40px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/black32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Arrive_time" />

                <EditText
                    android:id="@+id/et_Arrive_time"
                    style="@style/gray30"
                    android:layout_marginLeft="10px"
                    android:layout_width="match_parent"
                    android:layout_height="70px"
                    android:gravity="center_vertical"
                    android:background="@drawable/shape_kuang"
                    android:paddingLeft="20px"
                    android:hint="@string/Arrive_time"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="40px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/black32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/CIF" />

                <EditText
                    android:id="@+id/et_CIF"
                    style="@style/gray30"
                    android:layout_marginLeft="10px"
                    android:layout_width="match_parent"
                    android:layout_height="70px"
                    android:background="@drawable/shape_kuang"
                    android:gravity="center_vertical"
                    android:paddingLeft="20px"
                    android:hint="@string/CIF"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40px"
                android:layout_marginBottom="45px"
                android:orientation="vertical">

                <TextView
                    style="@style/black32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_picture" />
                <LinearLayout
                    android:layout_marginTop="30px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10px"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/iv_upShop0"
                            android:layout_width="135px"
                            android:layout_height="135px"
                            android:layout_margin="10px"
                            android:visibility="gone" />
                        <ImageView
                            android:id="@+id/iv_upShop1"
                            android:layout_width="135px"
                            android:layout_height="135px"
                            android:layout_margin="10px"
                            android:visibility="gone" />
                        <ImageView
                            android:id="@+id/iv_upShop2"
                            android:layout_width="135px"
                            android:layout_height="135px"
                            android:layout_margin="10px"
                            android:visibility="gone" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10px"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/iv_upShop3"
                            android:layout_width="135px"
                            android:layout_height="135px"
                            android:layout_margin="10px"
                            android:visibility="gone" />
                        <ImageView
                            android:id="@+id/iv_upShop4"
                            android:layout_width="135px"
                            android:layout_height="135px"
                            android:layout_margin="10px"
                            android:visibility="gone" />
                        <ImageView
                            android:id="@+id/iv_upShop5"
                            android:layout_width="135px"
                            android:layout_height="135px"
                            android:layout_margin="10px"
                            android:visibility="gone" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10px"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/iv_upShop6"
                            android:layout_width="135px"
                            android:layout_height="135px"
                            android:layout_margin="10px"
                            android:visibility="gone"/>
                        <ImageView
                            android:id="@+id/iv_upShop7"
                            android:layout_width="135px"
                            android:layout_height="135px"
                            android:layout_margin="10px"
                            android:visibility="gone" />
                        <ImageView
                            android:id="@+id/iv_upShop8"
                            android:layout_width="135px"
                            android:layout_height="135px"
                            android:layout_margin="10px"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
