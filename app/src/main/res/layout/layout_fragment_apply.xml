<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="230px">

        <LinearLayout
            android:id="@+id/ll_apply1"
            android:layout_width="220px"
            android:layout_height="220px"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="110px"
            android:background="@drawable/shape_xu"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="80px"
                android:layout_height="80px"
                android:background="@drawable/apply" />

            <TextView
                style="@style/black32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40px"
                android:gravity="center"
                android:text="@string/apply_food" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_apply2"
            android:layout_width="220px"
            android:layout_height="220px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="110px"
            android:background="@drawable/shape_xu"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="80px"
                android:layout_height="80px"
                android:background="@drawable/cash" />

            <TextView
                style="@style/black32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="40px"
                android:text="@string/apply_cash" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
