<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="100px"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <com.wzj.work.salesmanapp.MyView.MyGroup
            android:id="@+id/myGroup1"
            android:layout_width="100px"
            android:layout_height="100px"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_home"
                android:layout_width="60px"
                android:layout_height="60px"
                android:background="@drawable/home_y" />

            <TextView
                style="@style/blue20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5px"
                android:text="@string/home" />
        </com.wzj.work.salesmanapp.MyView.MyGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="100px"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <com.wzj.work.salesmanapp.MyView.MyGroup
            android:id="@+id/myGroup2"
            android:layout_width="100px"
            android:layout_height="100px"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_add"
                android:layout_width="60px"
                android:layout_height="60px"
                android:background="@drawable/add_n" />

            <TextView
                style="@style/gray20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5px"
                android:text="@string/add" />
        </com.wzj.work.salesmanapp.MyView.MyGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="100px"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <com.wzj.work.salesmanapp.MyView.MyGroup
            android:id="@+id/myGroup3"
            android:layout_width="100px"
            android:layout_height="100px"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_apply"
                android:layout_width="60px"
                android:layout_height="60px"
                android:background="@drawable/apply_n" />

            <TextView
                style="@style/gray20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5px"
                android:text="@string/apply" />
        </com.wzj.work.salesmanapp.MyView.MyGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="100px"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <com.wzj.work.salesmanapp.MyView.MyGroup
            android:id="@+id/myGroup4"
            android:layout_width="100px"
            android:layout_height="100px"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_mine"
                android:layout_width="60px"
                android:layout_height="60px"
                android:background="@drawable/mine_n" />
            <TextView
                style="@style/gray20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5px"
                android:text="@string/mine" />
        </com.wzj.work.salesmanapp.MyView.MyGroup>

    </LinearLayout>

</LinearLayout>
