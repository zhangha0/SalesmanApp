<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="270px"
        android:layout_marginLeft="36px"
        android:layout_marginRight="36px">

        <TextView
            android:id="@+id/tv_up"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentTop="true"
            android:background="#eceaea" />
        <TextView
            android:id="@+id/tv_down"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#eceaea" />
        <ImageView
            android:id="@+id/iv_mto"
            android:layout_width="180px"
            android:layout_height="180px"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/tv_mto_title"
            style="@style/black36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_mto"
            android:layout_marginLeft="30px"
            android:layout_toRightOf="@+id/iv_mto" />

        <LinearLayout
            android:id="@+id/ll_array"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_mto_title"
            android:layout_margin="30px"
            android:layout_toRightOf="@id/iv_mto"
            android:orientation="horizontal"></LinearLayout>

        <TextView
            android:id="@+id/tv_mto_discountprice"
            style="@style/black30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_mto"
            android:layout_marginLeft="30px"
            android:layout_toRightOf="@+id/iv_mto" />

        <TextView
            android:id="@+id/tv_mto_price"
            style="@style/gray30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_mto"
            android:layout_marginLeft="10px"
            android:layout_toRightOf="@+id/tv_mto_discountprice" />

        <com.wzj.work.salesmanapp.MyView.MyTextView
            android:id="@+id/tv_ok"
            android:layout_width="55px"
            android:layout_height="55px"
            android:layout_alignBottom="@+id/iv_mto"
            android:layout_alignParentRight="true"
            android:background="@drawable/choose_no"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>
